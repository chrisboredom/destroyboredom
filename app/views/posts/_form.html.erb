<%= form_for @post, :html => { :multipart => true } do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <br>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, ["Draft", "Published", "Scheduled"], selected: status_for(@post) %>
  </div>
  <br>
  <div class="field published-field">
    <%= f.label :published_at, "Publish At" %><br>
    <%= f.datetime_select :published_at %>
  </div>
  <br>
  <div class="field">
    <%= f.label :photo %><br>
    <% if @post.photo.exists? %>
      <%= image_tag @post.photo.url(:thumb) %>
    <% end %>
    <%= f.file_field :photo %><br>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

