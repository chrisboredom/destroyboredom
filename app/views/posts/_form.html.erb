<%= form_for @post, :html => { :multipart => true } do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <br>
  <div class="field">
    <%= f.file_field :photo %><br>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

