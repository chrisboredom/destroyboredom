<h2><%= @post.title %></h2>
  <div id="content">
	 <%= markdown(@post.body) %>
  </div>
		<% if @post.photo? %>
			<div id="photo">
				<%= image_tag @post.photo(:medium) %>
			</div>
		<% end %>
<% if user_signed_in? %>
 <%= link_to 'Edit', edit_post_path(@post) %>
 <%= link_to 'Delete', post_path(@post), method: :delete %>
<% else %>
  <%= link_to 'Home', root_path %>
<% end %>