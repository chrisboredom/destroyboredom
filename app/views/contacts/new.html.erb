<h1>Say Hello!</h1>

<%= form_for @contact do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, required: true %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message, as: :text %>
  </div>
  <div class="hidden">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname, hint: "leave this field blank" %>
  </div>
  <div class="actions">
    <%= f.submit 'Send Message' %>
  </div>
<% end %>
