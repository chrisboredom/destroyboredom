  <div class="hello_form">
  <h1>Contact me</h1>
    <%= form_for @contact do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, required: true, placeholder: "Name", autofocus: "true" %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, required: true, placeholder: "E-mail" %>
      </div>
      <div class="field">
        <%= f.label :message %><br>
        <%= f.text_area :message, as: :text %>
      </div>
      <div class="hidden">
        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, hint: "leave this field blank" %>
      </div>
      <br>
      <div class="button_wrapper">
        <%= f.submit 'Send Message', class: "button" %>
      </div>
    <% end %>
  </div>